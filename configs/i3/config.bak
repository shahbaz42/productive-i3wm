    (dunstctl is-paused | grep -q false && notify-send "ðŸ”” DND Disabled")'

bindsym $mod+space exec rofi -show drun -theme ~/.config/rofi/themes/minimal-modern.rasi

exec --no-startup-id copyq
bindsym $mod+Shift+v exec --no-startup-id copyq show
for_window [class="copyq"] floating enable, resize set 400 600, move position 1520 px 460 px

# Launch Blueman Manager
exec --no-startup-id blueman-manager

# Keybinding to show Blueman Manager
