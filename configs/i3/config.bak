exec --no-startup-id ~/.config/i3/natural_scroll.sh
bindsym $mod+Shift+Return exec google-chrome

# For floating terminal
# Match floating terminals by class and set them to float with size and position
for_window [class="floating_window"] floating enable, resize set 500 400, move position 1409 640
bindsym $mod+Mod1+Return exec --no-startup-id gnome-terminal --class=floating_window

for_window [class="floating_window_mid"] floating enable, resize set 800 600, move position center
bindsym $mod+Mod1+n exec --no-startup-id bash -c "thunar --class=floating_window_mid"

# Float GNOME Calculator
for_window [class="gnome-calculator"] floating enable, resize set 400 600, move position center

# Launch Calculator with Calculator key
bindsym XF86Calculator exec --no-startup-id gnome-calculator

# For Screenshot
bindsym Print exec --no-startup-id bash -c 'maim -s | xclip -selection clipboard -t image/png'

# For Switching workspaces
bindsym $mod+Mod1+Right workspace next
bindsym $mod+Mod1+Left workspace prev


for_window [class="^.*"] border pixel 1

bindsym $mod+Mod1+e exec --no-startup-id flatpak run com.github.wwmm.easyeffects

# locking
bindsym $mod+shift+x exec i3lock

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Auto open whatsapp
exec --no-startup-id google-chrome --app-id=hnpfjngllnobngcgfapefoaidbinmjnm
exec --no-startup-id thunderbird

